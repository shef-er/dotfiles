[user]
	name = Ernest Shefer
	email = shef-er@ya.ru
	signingKey = ~/.ssh/id_ed25519.pub

[credential]
	helper = cache

[gpg]
	format = ssh

[help]
	autoCorrect = prompt

[core]
	autocrlf = input
	filemode = false
	pager = perl /usr/share/git/diff-highlight/diff-highlight | less -S

[init]
	defaultBranch = main

[status]
	submoduleSummary = true

[diff]
	submodule = log
	algorithm = histogram

[commit]
	gpgsign = true
	verbose = true

[branch]
	sort = -committerdate

[merge]
	conflictstyle = zdiff3

[log]
	abbrevCommit = true
	date = format-local:%d.%m.%Y %H:%M

[fetch]
	fsckobjects = true

[receive]
	fsckobjects = true

[transfer]
	fsckobjects = true
	credentialsInUrl = warn

[pull]
	rebase = false

[push]
	default = upstream
	autoSetupRemote = true

[rebase]
	autoStash = true
	autoSquash = true
	missingCommitsCheck = error

[interactive]
	diffFilter = perl /usr/share/git/diff-highlight/diff-highlight

[alias]
	graph = log --graph --author-date-order
    fixup = commit --fixup
    amend = commit --amend
    revert = checkout --
	fuckit = reset --hard

    st = status
    sts = status -s
    stsi = status -s --ignored
	g = log --graph --author-date-order --pretty=format:'%C(auto)%h%(decorate)%C(reset) %C(bold)%s%C(reset)'
	gf = g --first-parent
	gw = log --graph --author-date-order --pretty=format:'%C(dim)%an [%ad]%C(reset) %C(auto)%h%(decorate)%C(reset)%n''%C(bold)%s%C(reset)'
	gwf = gw --first-parent

	# Custom scripts aliases
	clones = clones
