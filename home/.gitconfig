[user]

[core]
	autocrlf = input
	filemode = false
	editor = nano

[credential]
	helper = cache

[pull]
	rebase = false

[init]
	defaultBranch = master

[alias]
    graph = !git log --graph --date-order --abbrev-commit --date=format:'%d.%m.%Y %H:%I:%S %z' "$(git symbolic-ref --short HEAD)"

    # just lke in IntellijIDEA git view
    g = !git log --graph --date-order \
        --date=format:'%d.%m.%Y %H:%I:%S %z' \
        --pretty='%>|(21)%C(yellow)%h%C(reset) %<|(72,trunc)%C(bold)%s%C(reset) %C(bold)%an%C(reset) %C(dim)%ad%C(reset)%C(bold yellow)%d%C(reset)' \
        "$(git symbolic-ref --short HEAD)"
