[user]

[core]
	autocrlf = input
	filemode = false
	editor = nano

[credential]
	helper = cache

[pull]
	rebase = false

[init]
	defaultBranch = master

[alias]
	g = log --graph --abbrev-commit --all \
	    --date=format:'%d.%m.%Y %H:%I' \
		--pretty='%C(yellow)%h%C(reset) %<(20,trunc)%C(bold blue)%an%C(reset) %C(bold green)(%ad)%C(reset) %<(72,trunc)%C(bold)%s%C(reset) %d'

	graph = log --graph --abbrev-commit --decorate --all \
	    --date=format:'%d.%m.%Y %H:%I:%S %z' \
		--pretty='%C(yellow)%h%C(bold)%d%C(reset)%n    %C(blue)%an%C(reset) %C(cyan)<%ce>%C(reset) %C(green)%ad%C(reset)%n    %s%n'
